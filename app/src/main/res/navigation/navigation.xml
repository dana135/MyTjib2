<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.androidapp.mytjib.events.EventsFragment"
        android:label="events_fragment"
        tools:layout="@layout/events_fragment" >
        <action
            android:id="@+id/action_eventsFragment_to_eventDetailsFragment"
            app:destination="@id/eventDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.androidapp.mytjib.event_details.EventDetailsFragment"
        android:label="event_details_fragment"
        tools:layout="@layout/event_details_fragment" >
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_eventDetailsFragment_to_event_buy_tickets"
            app:destination="@id/event_buy_tickets" />
    </fragment>
    <fragment
        android:id="@+id/event_buy_tickets"
        android:name="com.androidapp.mytjib.buy_tickets.BuyTicketsFragment"
        android:label="fragment_event_buy_tickets"
        tools:layout="@layout/fragment_event_buy_tickets" >
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.androidapp.mytjib.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_eventsFragment"
            app:destination="@id/eventsFragment" />
    </fragment>
</navigation>